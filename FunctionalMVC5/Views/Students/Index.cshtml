@model IEnumerable<FunctionalMVC5.Models.Student>

@{
    ViewBag.Title = "Students Manager";
}
@if (!(TempData["Message"] is null)
    )
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <h3>@TempData["Message"].ToString()</h3>
    </div>
}
<h2>Students Manager</h2>

<a href="@Url.Action("Create")" class="btn btn-outline-primary my-3">
    Create New Student
</a>
<table class="table table-striped table-hover mt-3">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SignupDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignupDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a href="@Url.Action("Edit", controllerName: "Students", routeValues: new {id = item. Id})" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Details", controllerName: "Students", routeValues: new {id = item. Id})" class="btn btn-secondary">Details</a>
                <a href="@Url.Action("Delete", controllerName: "Students", routeValues: new {id = item. Id})" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>
